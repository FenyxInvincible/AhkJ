//Elden Ring macro profile. Allows to change spells and consumables by pressing specific key
//To be avle to use is without changing profile following key mapping in game should be specified:
//Change spell key: NUMPAD7
//Change consumable key: NUMPAD9
//Change right weapon: 6
//Change left weapon: 4
//Use consumable: R
//Amount of spells/consumables should be set to values which character has in current period of time.
//Changing amount of spells/consumables on character REQUIRES changes for amount property
//If order is broken it can be reset by pressing "-" (dash) key
{
    //Setup of amounts and reset order macro
    "-": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.Reset",
            "params": {
                "spells": {
                    //change spell key
                    "key": "NUMPAD7",
                    //Number of spells
                    "amount": 2
                },
                "consumables": {
                    //change consumable key
                    "key": "NUMPAD9",
                    //Number of consumables
                    "amount": 2
                }
            }
        }
    },
    //Select 1 spell slot only
    "1":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "1",
                "changeKey": "NUMPAD9"
            }
        }
    },
    //Select 2nd spell slot and auto use from left hand weapon
    "2":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "2",
                "changeKey": "NUMPAD9",
                "useKey": [
                    {"key": "RMB", "delay": 1}
                ]
            }
        }
    },
    //Use HP
    "0": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "1",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    },
    //Use MP
    "=": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "2",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    },
    //Both handed weapon right/left by scrolling up down (disables scrolls in inventory)
    "MOUSE_SCROLL": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.SendSequence",
            "params": [
                {"key": "E", "delay": 30, "action": "Press"},
                {"key": "LMB", "delay": 30},
                {"key": "E", "delay": 75, "action": "Release"}
            ]
        },
        "onRelease": {
            "macroClass": "local.autohotkey.data.macro.SendSequence",
            "params": [
                {"key": "E", "delay": 30, "action": "Press"},
                {"key": "RMB", "delay": 30},
                {"key": "E", "delay": 75, "action": "Release"}
            ]
        }
    }
}