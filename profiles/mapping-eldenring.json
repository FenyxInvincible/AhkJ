//Elden Ring macro profile. Allows to change spells and consumables by pressing specific key
//To be avle to use is without changing profile following key mapping in game should be specified:
//Change spell key: NUMPAD9
//Change consumable key: NUMPAD7
//Use consumable: R
//Amount of spells/consumables should be set to values which character has in current period of time.
//Changing amount of spells/consumables on character REQUIRES changes for amount property
//If order is broken it can be reset by pressing "-" (dash) key
{
    //Setup of amounts and reset order macro
    "-": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.Reset",
            "params": {
                "spells": {
                    //change spell key
                    "key": "NUMPAD9",
                    //Number of spells
                    "amount": 5
                },
                "consumables": {
                    //change consumable key
                    "key": "NUMPAD7",
                    //Number of consumables
                    "amount": 5
                }
            }
        }
    },
    //Select 1 spell
    "1":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "1",
                "changeKey": "NUMPAD9"
            }
        }
    },
    //Select 2 spell
    "2":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "2",
                "changeKey": "NUMPAD9"
            }
        }
    },
    //Select 3 spell
    "3":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "3",
                "changeKey": "NUMPAD9"
            }
        }
    },
    //Select 4 spell
    "4":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "4",
                "changeKey": "NUMPAD9"
            }
        }
    },
    //Select 5 spell
    "5":
    {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectSpellSlot",
            "params": {
                "position": "5",
                "changeKey": "NUMPAD9"
            }
        }
    },
    //Use HP
    "6": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "1",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    },
    //Use MP
    "7": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "2",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    },
    //3rd slot
    "8": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "3",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    },
    //4th slot
    "9": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "4",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    },
    //5th slot
    "0": {
        "onPress": {
            "macroClass": "local.autohotkey.data.macro.eldenring.SelectConsumableSlot",
            "params": {
                "position": "5",
                "changeKey": "NUMPAD7",
                "useKey": [
                    {"key": "R", "delay": 1}
                ]
            }
        }
    }

